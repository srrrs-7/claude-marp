{
	"name": "claude-marp",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"slides": "bun run src/index.ts",
		"validate": "bun run scripts/validate-slides-schema.ts",
		"fix": "bun run scripts/auto-fix-slides-schema.ts",
		"split": "python3 scripts/split-code-diagrams.py --all",
		"fix-svg": "bun run scripts/fix-svg-overflow.ts",
		"rebuild": "./scripts/rebuild-all-slides.sh",
		"rebuild:render": "./scripts/rebuild-all-slides.sh render",
		"rebuild:export": "./scripts/rebuild-all-slides.sh export",
		"typecheck": "tsgo --noEmit",
		"check": "biome check .",
		"format": "biome format --write .",
		"spellcheck": "cspell lint --no-progress --show-suggestions .",
		"test": "bun test scripts/test-slides.test.ts",
		"generate:index": "bun run scripts/generate-index.ts"
	},
	"dependencies": {
		"@marp-team/marp-cli": "^4.1.2",
		"yaml": "^2.7.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@bun-security-scanner/osv": "^1.0.0",
		"@types/bun": "^1.2.4",
		"@typescript/native-preview": "^7.0.0-dev.20260213.1",
		"cspell": "^9.6.4"
	}
}
